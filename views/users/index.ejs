<%- include('../dashboard/startContents')  %>
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <div class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1 class="m-0">Dashboard</h1>
                    </div>
                    <!-- /.col -->
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item active">Dashboard v1</li>
                        </ol>
                    </div>
                    <!-- /.col -->
                </div>
                <!-- /.row -->
            </div>
            <!-- /.container-fluid -->
        </div>
        <!-- /.content-header -->

        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <!-- Small boxes (Stat box) -->
                <div class="row">
                    <div class="col-md-12">
                        <div class="productList">
                            <div class="row">
                                <% if (users) { %>
                                    <% users.forEach((product) =>  { %>
                                        <div class="card" style="width: 18rem;">
                                            <% if(product.image != "upload/images/product/ ") { %>
                                                <img src="../../<%= product.image %> " class="card-img-top" alt="...">
                                                <% } else { %>
                                                    <img src="../../upload/no_image.jpg" class="card-img-top" alt="...">
                                                    <% } %>
                                                        <div class="card-body">
                                                            <h5 class="card-title">
                                                                <%= product.name %>
                                                            </h5>
                                                            <p class="card-text">
                                                                <%= product.description %>
                                                            </p>
                                                            <a href="product/<%= product.id %> " class="btn btn-sm btn-primary">Read More</a>
                                                            <a href="product/edit/<%= product.id %> " class="btn btn-sm btn-danger">Edit</a>
                                                            <a href="#" class="btn btn-sm btn-warning">
                                                                <%= product.price  %>
                                                            </a>
                                                        </div>
                                        </div>
                                        <% }) } %>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.row (main row) -->
            </div>
            <!-- /.container-fluid -->
        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
    <%- include('../dashboard/endContents')  %>